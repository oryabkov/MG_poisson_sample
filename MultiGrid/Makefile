NMFD_INCLUDE = $(PROJECT_ROOT_PATH)/NMFD/include

INCLUDE_CONTRIB = -I$(SCFD_INCLUDE) -I$(NMFD_INCLUDE)
HOSTFLAGS = $(TARGET_GCC) -std=c++17
